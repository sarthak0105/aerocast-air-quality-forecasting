# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/airquality
REDIS_URL=redis://localhost:6379

# API Keys
NASA_EARTHDATA_USERNAME=your_username
NASA_EARTHDATA_PASSWORD=your_password
ECMWF_API_KEY=your_ecmwf_key
OPENWEATHER_API_KEY=your_openweather_key

# Model Configuration
MODEL_VERSION=v1.0
FORECAST_HORIZON_HOURS=48
SPATIAL_RESOLUTION_KM=1
BATCH_SIZE=32
LEARNING_RATE=0.001

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# MLflow
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=air_quality_forecasting

# Data Paths
RAW_DATA_PATH=data/raw
PROCESSED_DATA_PATH=data/processed
MODEL_PATH=models
SATELLITE_DATA_PATH=data/raw/satellite
METEOROLOGICAL_DATA_PATH=data/raw/meteorological

# Geographic Configuration
DELHI_BBOX_MIN_LAT=28.4
DELHI_BBOX_MAX_LAT=28.9
DELHI_BBOX_MIN_LON=76.8
DELHI_BBOX_MAX_LON=77.5

# Airflow
AIRFLOW_HOME=/opt/airflow
AIRFLOW__CORE__EXECUTOR=LocalExecutor